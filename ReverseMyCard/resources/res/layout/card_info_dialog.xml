<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:layout_width="300dp" android:layout_height="wrap_content">
    <TextView android:textSize="25dp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/textViewTitle" android:background="@drawable/side_nav_bar" android:paddingLeft="10sp" android:paddingTop="15sp" android:paddingRight="10sp" android:paddingBottom="15sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Card Info" android:textAlignment="center"/>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="match_parent" android:layout_height="15dp" android:textAlignment="center"/>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textViewWarningInvalid" android:background="#f7ffaf" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/warning_invalid_card" android:textAlignment="center"/>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textViewWarningDefault" android:background="#f7ffaf" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/warning_default_card" android:textAlignment="center"/>
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="1dp" android:stretchColumns="1" android:shrinkColumns="1">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:paddingLeft="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NAME: "/>
            <TextView android:id="@+id/name_on_card" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:paddingLeft="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NUMBER: "/>
            <TextView android:id="@+id/card_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:paddingLeft="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BRAND: "/>
            <TextView android:id="@+id/card_brand" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
        </TableRow>
        <TableRow android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:paddingLeft="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TYPE: "/>
            <TextView android:id="@+id/card_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
        </TableRow>
        <TableRow android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:paddingLeft="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ISSUER: "/>
            <TextView android:id="@+id/card_issuer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:paddingLeft="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="EXPIRATION: "/>
            <TextView android:id="@+id/card_expiration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:paddingLeft="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SERVICE CODE: "/>
            <TextView android:id="@+id/card_service_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
        </TableRow>
        <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_span="2">
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/service_code1_val" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
                <TextView android:id="@+id/service_code1_descr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value" android:paddingStart="10dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/service_code2_val" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
                <TextView android:id="@+id/service_code2_descr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value" android:paddingStart="10dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/service_code3_val" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
                <TextView android:id="@+id/service_code3_descr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value" android:paddingStart="10dp"/>
            </TableRow>
        </TableLayout>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:paddingLeft="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DESC. DATA: "/>
            <TextView android:id="@+id/discretionary_data" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unset_value"/>
        </TableRow>
    </TableLayout>
    <Button android:textSize="16dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/buttonDialogClose" android:background="@drawable/round_rect" android:layout_width="120dp" android:layout_height="50dp" android:layout_margin="10sp" android:text="CLOSE"/>
</LinearLayout>
